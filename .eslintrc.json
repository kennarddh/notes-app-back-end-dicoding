{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": ["airbnb-base"],
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"rules": {
		"prettier/prettier": [
			"warn",
			{
				"endOfLine": "lf"
			}
		],
		"linebreak-style": ["error", "unix"],
		"quotes": ["off"],
		"semi": ["error", "never"],
		"no-case-declarations": "off"
	}
}
